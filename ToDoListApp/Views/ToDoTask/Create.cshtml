@model ToDoTask

@{
    ViewData["Title"] = "Create";
}

<h4 class="mt-2">Create Task</h4>
<hr />


<form method="Post" asp-action="Create">

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="Assignment.AssignedTo" class="control-label"></label>
                    <input asp-for="Assignment.AssignedTo" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Assignment.CreatedBy" class="control-label"></label>
                    <input asp-for="Assignment.CreatedBy" class="form-control" />
                </div>
                <div>
                    <input type="submit" value="Create" class="btn  w-25 btn-light mt-2" />
                    <a class="btn w-25 btn-secondary mt-2 mx-2" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
